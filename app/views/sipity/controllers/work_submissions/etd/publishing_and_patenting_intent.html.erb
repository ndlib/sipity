<h1><%= model.translate(:call_to_action, predicate: :heading) %></h1>

<%= simple_form_for(
  model,
  url: request.path,
  method: :post,
  as: :work,
  html: { class: 'simple-form panel panel-primary with-footer' }
) do |f| %>
  <legend class="panel-heading">
    <h3 class="panel-title"><%= model.translate(:panel, predicate: :title) %></h3>
  </legend>

  <fieldset class="panel-body">
    <%= f.error_notification %>
    <%= f.error :base, error_method: :to_sentence %>
    <%= f.input :work_publication_strategy, as: :radio_buttons, collection: view_object.work_publication_strategies_for_select %>
    <%= f.label :work_patent_strategy %>
    <p><%= view_object.translate('work_patent_strategy', scope: 'panel_headings', predicate: 'description') %></p>
    <%= f.input(:work_patent_strategy, as: :radio_buttons, collection: view_object.work_patent_strategies_for_select, label: false) %>
  </fieldset>

  <div class="panel-footer action-pane">
    <%= f.submit nil, name: "form/#{model.processing_action_name}/submit" %>
  </div>
<% end %>

<div class="action-pane">
  <%= link_to t("sipity/decorators/entity_enrichments.cancel"), work_path(model.work), class: 'btn btn-default' %>
</div>
